<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/simple_list_item_margin"
    android:layout_marginEnd="@dimen/simple_list_item_margin"
    android:layout_marginLeft="@dimen/simple_list_item_margin"
    android:layout_marginRight="@dimen/simple_list_item_margin"
    android:layout_marginStart="@dimen/simple_list_item_margin"
    android:layout_marginTop="@dimen/simple_list_item_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/full_pixel_beer_32" />

        <TextView
            android:id="@+id/text_view_name_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="PlaceHolder" />

        <RatingBar
            android:id="@+id/rating_bar_list_item"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1" />

    </LinearLayout>


</RelativeLayout>